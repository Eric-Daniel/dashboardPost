@page
@model WebApplication.Pages.PostList.CreateModel

<br />
<h2 class="text-info">Create New Post</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Dashboard.Title"></label>
            </div>
            <div class="col-6">
                <input asp-for="Dashboard.Title" class="form-control" />
            </div>
            <span asp-validation-for="Dashboard.Title" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Dashboard.Description"></label>
            </div>
            <div class="col-6">
                <input asp-for="Dashboard.Description" class="form-control" />
            </div>
            <span asp-validation-for="Dashboard.Description" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Dashboard.Time"></label>
            </div>
            <div class="col-6">
                <input asp-for="Dashboard.Time" class="form-control" />
            </div>
            <span asp-validation-for="Dashboard.Time" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back To List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
