@page
@model WebApplication.Pages.PostList.IndexModel


<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">List of Posts</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white">Create New Post</a>
    </div>


    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.DashboardPosts.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="DashboardPosts.FirstOrDefault().Title"></label>
                        </th>
                        <th>
                            <label asp-for="DashboardPosts.FirstOrDefault().Description"></label>
                        </th>
                        <th>
                            <label asp-for="DashboardPosts.FirstOrDefault().Time"></label>
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach (var item in Model.DashboardPosts)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Time)
                            </td>
                            <td>
                                <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger btn-sm">Delete</button>
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No posts available.</p>
            }
        </form>
    </div>
</div>
